<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:layout_alignParentBottom="true"
    android:background="#00ffffff"
    android:gravity="bottom">


    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#55bbbbbb"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="58dp">

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:thumb="@drawable/thumbs" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:collapseColumns="4"
            android:stretchColumns="0">

            <TableRow
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="当-林俊杰"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/music_play_imgbtn"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/music_next_imgbtn"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/music_list_imgbtn"
                    android:scaleType="fitXY" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


    <com.designers.kuwo.utils.CircularImage
        android:id="@+id/playbar_img_imgview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="3dp" />
</RelativeLayout>